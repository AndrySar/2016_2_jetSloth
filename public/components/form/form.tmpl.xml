<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="modal-window modal-window-registration">

        <header class="modal-window__header">
            <img src="img/form-logo.png" class="modal-window__header__logo"/>
            <div class="modal-close">
                <a href="#">
                    <i class="fa fa-3x fa-times-circle"></i>
                </a>
            </div>
        </header>

        <div class="modal-window__content">
            <form class="form-default form-modal reg-form-modal">
                <fest:for iterate="data.fields" index="i" value="field">
                    <input type="text" name="{field.name}" placeholder="{field.placeholder}"/>
                    <p class="error-{field.name}"></p>
                </fest:for>
                <div class="js-controls"></div>
            </form>
        </div>
    </div>
</fest:template>